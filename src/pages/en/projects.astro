---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import { useTranslation } from '@/i18n/utils';
import { fetchGitHubRepos, getLanguageColor, getLanguageIcon, type GitHubRepo } from '@/lib/github';
import { getIcon } from '@/lib/icons';

const { t } = useTranslation('en');

// Obtener repositorios de GitHub con fallback
async function getGitHubRepos(): Promise<GitHubRepo[]> {
  try {
    // Username real de GitHub
    const githubRepos = await fetchGitHubRepos('K1riDev');

    // Agregar proyectos privados destacados
    const privateProjects: GitHubRepo[] = [
      {
        id: 999999,
        name: 'FireMoss',
        description: 'Innovative web platform for multimedia content management with modern interface and advanced functionalities.',
        html_url: '', // Sin enlace a GitHub para proyectos privados
        homepage: 'https://www.firemoss.xyz/',
        language: 'TypeScript',
        stargazers_count: 0,
        forks_count: 0,
        fork: false,
        topics: ['typescript', 'web-platform', 'multimedia', 'modern-ui'],
        private: true
      },
      {
        id: 999998,
        name: 'RealmVerse',
        description: 'Interactive digital universe that combines gaming and cutting-edge web technology for immersive experiences.',
        html_url: '', // Sin enlace a GitHub para proyectos privados
        homepage: 'https://realmverse.me/',
        language: 'JavaScript',
        stargazers_count: 0,
        forks_count: 0,
        fork: false,
        topics: ['javascript', 'gaming', 'interactive', 'immersive-web'],
        private: true
      }
    ];

    // Combinar repositorios públicos y privados, luego ordenar: privados primero, luego por estrellas
    const allRepos = [...githubRepos, ...privateProjects];
    // Filtrar repositorio del perfil (README del usuario)
    const filteredRepos = allRepos.filter(repo => repo.name !== 'K1riDev');
    return filteredRepos.sort((a, b) => {
      // Los proyectos privados van primero
      if (a.private && !b.private) return -1;
      if (!a.private && b.private) return 1;
      // Si ambos son del mismo tipo, ordenar por estrellas
      return b.stargazers_count - a.stargazers_count;
    });
  } catch (error) {
    // Fallback data with MMORPG theme, ordenado por estrellas
    return [
      {
        id: 999999,
        name: 'FireMoss',
        description: 'Innovative web platform for multimedia content management with modern interface and advanced functionalities.',
        html_url: '',
        homepage: 'https://www.firemoss.xyz/',
        language: 'TypeScript',
        stargazers_count: 0,
        forks_count: 0,
        fork: false,
        topics: ['typescript', 'web-platform', 'multimedia', 'modern-ui'],
        private: true
      },
      {
        id: 999998,
        name: 'RealmVerse',
