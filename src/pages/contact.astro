              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Animate cards
    gsap.from(".mmorpg-card", {
      duration: 1,
      y: 50,
      opacity: 0,
      stagger: 0.2,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".mmorpg-card",
        start: "top 80%",
        toggleActions: "play none none reverse",
      },
    });

    // Form submission
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const submitBtn = document.getElementById(
      "submit-btn"
    ) as HTMLButtonElement;
    const submitText = document.getElementById("submit-text") as HTMLElement;
    const submitIcon = document.getElementById("submit-icon") as HTMLElement;
    const loadingIcon = document.getElementById("loading-icon") as HTMLElement;

    if (form && submitBtn && submitText && submitIcon && loadingIcon) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Show loading state
        submitText.textContent = "Enviando...";
        submitIcon.classList.add("hidden");
        loadingIcon.classList.remove("hidden");
        submitBtn.disabled = true;

        // Simulate form submission (replace with actual form handling)
        setTimeout(() => {
          // Reset form
          form.reset();

          // Show success state
          submitText.textContent = "¬°Enviado!";
          loadingIcon.classList.add("hidden");
          submitIcon.classList.remove("hidden");

          // Reset button after 2 seconds
          setTimeout(() => {
            submitText.textContent = "Enviar Mensaje";
            submitBtn.disabled = false;
          }, 2000);

          // Show success toast notification
          showToast("¬°Mensaje enviado exitosamente!", "success");
        }, 2000);
      });
    }

    // Toast notification function
    function showToast(message: string, type: "success" | "error") {
      const toast = document.createElement("div");
      toast.className = `fixed top-24 right-6 z-50 p-4 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 ${
        type === "success"
          ? "bg-green-500/90 text-white border border-green-400"
          : "bg-red-500/90 text-white border border-red-400"
      }`;
      toast.textContent = message;

      document.body.appendChild(toast);

      // Animate in
      setTimeout(() => {
        toast.style.transform = "translateX(0)";
      }, 100);

      // Remove after 3 seconds
      setTimeout(() => {
        toast.style.transform = "translateX(100%)";
        setTimeout(() => {
          document.body.removeChild(toast);
        }, 300);
      }, 3000);
    }
  });
</script>
