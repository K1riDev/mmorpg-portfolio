---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import { useTranslation } from "@/i18n/utils";
import { getIcon } from "@/lib/icons";

const { t } = useTranslation("es");
---

<Layout title="Contacto - KiriDev" lang="es">
  <Navbar lang="es" currentPath="/contact" />

  <main class="min-h-screen pt-24 pb-16">
    <div class="container mx-auto px-6">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-cinzel font-bold mb-6">
          <span
            class="bg-gradient-to-r from-yellow-400 to-amber-500 bg-clip-text text-transparent"
          >
            {t.contact.title}
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto font-cinzel">
          {t.contact.subtitle}
        </p>
        <div
          class="w-24 h-1 bg-gradient-to-r from-yellow-400 to-amber-500 mx-auto mt-6"
        >
        </div>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="mmorpg-card">
            <h2
              class="text-2xl font-cinzel font-bold text-yellow-400 mb-8 flex items-center"
            >
              <span class="text-2xl mr-3">üì¨</span>
              Portal de Mensaje
            </h2>

            <form id="contact-form" class="space-y-6">
              <div>
                <label
                  for="name"
                  class="block text-sm font-orbitron text-yellow-400 mb-2"
                >
                  {t.contact.form.name}
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-slate-700/50 border border-cyan-400/30 rounded-lg focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all font-orbitron"
                  placeholder="Tu nombre"
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-orbitron text-cyan-400 mb-2"
                >
                  {t.contact.form.email}
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-slate-700/50 border border-cyan-400/30 rounded-lg focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all font-orbitron"
                  placeholder="tu.email@ejemplo.com"
                />
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-orbitron text-cyan-400 mb-2"
                >
                  {t.contact.form.message}
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 bg-slate-700/50 border border-cyan-400/30 rounded-lg focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all font-orbitron resize-none"
                  placeholder="Escribe tu mensaje aqu√≠..."></textarea>
              </div>

              <button
                type="submit"
                class="w-full mmorpg-button flex items-center justify-center space-x-3"
                id="submit-btn"
              >
                <span id="submit-text">{t.contact.form.send}</span>
                <svg
                  id="submit-icon"
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>

                <!-- Loading spinner (hidden by default) -->
                <svg
                  id="loading-icon"
                  class="w-5 h-5 animate-spin hidden"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
              </button>
            </form>
          </div>

          <!-- Contact Info & Social -->
          <div class="space-y-8">
            <!-- Social Links -->
            <div class="mmorpg-card">
