---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import { useTranslation } from "@/i18n/utils";

const { t } = useTranslation("es");
---

<Layout title="Acerca de - KiriDev" lang="es">
  <Navbar lang="es" currentPath="/about" />

  <main class="min-h-screen pt-24 pb-16">
    <div class="container mx-auto px-6">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-cinzel font-bold mb-6">
          <span
            class="bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent"
          >
            {t.about.title}
          </span>
        </h1>
        <div
          class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-purple-400 mx-auto"
        >
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Character Info Panel -->
        <div class="mmorpg-card">
          <div class="text-center mb-8">
            <!-- Avatar/Character -->
            <div class="w-32 h-32 mx-auto mb-6 relative">
              <div
                class="w-full h-full rounded-full bg-gradient-to-br from-cyan-400 to-purple-500 p-1"
              >
                <div
                  class="w-full h-full rounded-full bg-slate-800 flex items-center justify-center"
                >
                  <span class="text-4xl font-orbitron font-bold text-cyan-400"
                    >KD</span
                  >
                </div>
              </div>
              <!-- Level indicator -->
              <div
                class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-yellow-400 to-orange-400 text-slate-900 px-3 py-1 rounded-full text-sm font-orbitron font-bold"
              >
                LVL 3
              </div>
            </div>

            <h2 class="text-2xl font-cinzel font-bold text-cyan-400 mb-2">
              KiriDev
            </h2>
            <p class="text-purple-400 font-orbitron">Frontend Developer</p>
          </div>

          <!-- Character Stats -->
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="font-orbitron text-cyan-400">JavaScript</span>
              <div class="flex-1 mx-4 bg-slate-700 rounded-full h-2">
                <div
                  class="bg-gradient-to-r from-cyan-400 to-blue-400 h-2 rounded-full"
                  style="width: 90%"
                >
                </div>
              </div>
              <span class="font-orbitron text-xs text-gray-400">90%</span>
            </div>

            <div class="flex justify-between items-center">
              <span class="font-orbitron text-purple-400">React</span>
              <div class="flex-1 mx-4 bg-slate-700 rounded-full h-2">
                <div
                  class="bg-gradient-to-r from-purple-400 to-pink-400 h-2 rounded-full"
                  style="width: 85%"
                >
                </div>
              </div>
              <span class="font-orbitron text-xs text-gray-400">85%</span>
            </div>

            <div class="flex justify-between items-center">
              <span class="font-orbitron text-green-400">Node.js</span>
              <div class="flex-1 mx-4 bg-slate-700 rounded-full h-2">
                <div
                  class="bg-gradient-to-r from-green-400 to-emerald-400 h-2 rounded-full"
                  style="width: 70%"
                >
                </div>
              </div>
              <span class="font-orbitron text-xs text-gray-400">70%</span>
            </div>

            <div class="flex justify-between items-center">
              <span class="font-orbitron text-yellow-400">TypeScript</span>
              <div class="flex-1 mx-4 bg-slate-700 rounded-full h-2">
                <div
                  class="bg-gradient-to-r from-yellow-400 to-orange-400 h-2 rounded-full"
                  style="width: 80%"
                >
                </div>
              </div>
              <span class="font-orbitron text-xs text-gray-400">80%</span>
            </div>
          </div>
        </div>

        <!-- Story/Description -->
        <div class="space-y-8">
          <!-- Main description -->
          <div class="mmorpg-card">
            <h3
              class="text-2xl font-cinzel font-bold text-cyan-400 mb-4 flex items-center"
            >
              <span class="text-2xl mr-3">üìñ</span>
              Mi Historia
            </h3>
            <p class="text-gray-300 leading-relaxed font-cinzel">
              {t.about.description}
            </p>
          </div>

          <!-- Skills section -->
          <div class="mmorpg-card">
            <h3
              class="text-2xl font-cinzel font-bold text-purple-400 mb-6 flex items-center"
            >
              <span class="text-2xl mr-3">‚öîÔ∏è</span>
              {t.about.skills}
            </h3>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {
                [
                  "React",
                  "Vue.js",
                  "Astro",
                  "TypeScript",
                  "TailwindCSS",
                  "Node.js",
                ].map((skill) => (
                  <div class="flex items-center space-x-2 p-3 rounded-lg bg-slate-700/50 hover:bg-slate-600/50 transition-colors">
                    <div class="w-3 h-3 bg-cyan-400 rounded-full glow-effect" />
                    <span class="font-orbitron text-sm">{skill}</span>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Currently Learning -->
          <div class="mmorpg-card">
            <h3
              class="text-2xl font-cinzel font-bold text-yellow-400 mb-6 flex items-center"
            >
              <span class="text-2xl mr-3">üìö</span>
              {t.about.learning}
            </h3>

            <div class="space-y-3">
              {
                [
                  "Backend Development",
                  "Database Design",
                  "DevOps",
                  "System Architecture",
                ].map((item) => (
                  <div class="flex items-center space-x-3 p-3 rounded-lg border border-yellow-400/30 hover:border-yellow-400 transition-colors">
                    <div class="w-2 h-2 bg-yellow-400 rounded-full animate-pulse" />
                    <span class="font-orbitron text-sm">{item}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Animate cards on scroll
    gsap.from(".mmorpg-card", {
      duration: 1,
      y: 50,
      opacity: 0,
      stagger: 0.2,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".mmorpg-card",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none reverse",
      },
    });

    // Animate skill bars
    const skillBars = document.querySelectorAll(".bg-gradient-to-r");
    skillBars.forEach((bar, index) => {
      gsap.from(bar, {
        duration: 1.5,
        width: "0%",
        ease: "power2.out",
        delay: index * 0.2,
        scrollTrigger: {
          trigger: bar,
          start: "top 80%",
          toggleActions: "play none none reverse",
        },
      });
    });
  });
</script>
