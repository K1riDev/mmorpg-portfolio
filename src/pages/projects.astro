                  target="_blank"
                  rel="noopener noreferrer"
                  class={`${repo.homepage ? 'flex-1' : 'w-full'} mmorpg-button text-center text-sm py-2 bg-gradient-to-r from-amber-600/20 to-orange-600/20 border-amber-500`}
