      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Animate project cards on scroll - usando opacity y transform sin conflictos
    gsap.fromTo('[data-project]',
      {
        opacity: 0,
        y: 30,
        scale: 0.95
      },
      {
        duration: 0.6,
        opacity: 1,
        y: 0,
        scale: 1,
        stagger: 0.1,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '[data-project]',
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    // Hover animations m치s suaves usando solo glow effect
    const projectCards = document.querySelectorAll('[data-project]');
    projectCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        gsap.to(card, {
          duration: 0.3,
          boxShadow: '0 20px 25px -5px rgba(251, 191, 36, 0.1), 0 10px 10px -5px rgba(251, 191, 36, 0.04)',
          ease: 'power2.out'
        });
      });

      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          duration: 0.3,
          boxShadow: '0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)',
          ease: 'power2.out'
        });
      });
    });
  });
</script>
